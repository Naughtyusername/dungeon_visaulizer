{
  "$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
  
  // 1. COLLECTIONS (Auto-replaced by script)
  "collections": [
    {
      "name": "core",
      "path": "/tools/Odin/core"
    },
    {
      "name": "vendor",
      "path": "/tools/Odin/vendor"
    },
    {
      "name": "base",
      "path": "/tools/Odin/base"
    }
  ],
  
  // 2. DOCUMENT SYNC
  "enable_document_provider": true,
  "sync_method": "full",
  
  // 3. CORE PERFORMANCE SETTINGS
  "enable_semantic_tokens": false,
  "enable_checker_only_saved": true,
  
  // 4. FEATURE TOGGLES
  "enable_hover": true,
  "enable_document_symbols": true,
  "enable_snippets": true,
  "enable_procedure_snippet": true,
  "enable_references": true,
  "enable_rename": true,
  "enable_procedure_context": true,
  
  // 5. INLAY HINTS (Adjust based on performance)
  "enable_inlay_hints_params": true,
  "enable_inlay_hints_default_params": false,
  "enable_inlay_hints_implicit_return": true,
  
  // 6. COMPILER & CHECKER
  "checker_args": "-vet -strict-style -disallow-do",
  
  // 7. FORMATTING
  "enable_format": true,
  "formatter_args": "",
  "spaces_around_colons": true,
  
  // 8. EXPERIMENTAL
  "enable_fake_methods": false,
  "verbose": false
}
